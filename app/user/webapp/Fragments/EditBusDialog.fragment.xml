<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="editBusDialog" title="Edit Bus Details" draggable="true" contentWidth="30%">
        <VBox class="sapUiSmallMargin">
            <Label text="Bus Number" />
            <Input value="{busModel>/busNumber}" enabled="false" />
            <Label text="Bus Name" />
            <Input value="{busModel>/busName}" />
            <Label text="Source" />
            <Input value="{busModel>/source}" />
            <Label text="Destination" />
            <Input value="{busModel>/destination}" />
            <Label text="Departure Time" />
            <Input value="{busModel>/departureTime}" />
            <Label text="Arrival Time" />
            <Input value="{busModel>/arrivalTime}" />
            <Label text="Price" />
            <Input type="Number" value="{busModel>/price}" />
            <Label text="Total Seats" />
            <Input type="Number" value="{busModel>/totalSeats}" />
        </VBox>
        <beginButton>
            <Button text="Save" press=".onSaveBusDetails" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelEdit" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
